{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,  // Alterado para permitir a geração de arquivos JavaScript
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "server/types"]
  },
  "include": [
    "src",            // Mantém a compilação do front
    "server/**/*.ts"  // Adiciona a compilação dos arquivos TypeScript na pasta 'server'
  ]
}
