{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, 
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "server/types"],
    "outDir": "./dist",  // Adiciona a pasta de saída dos arquivos compilados
    "rootDir": "./",     // Indica que o TypeScript deve considerar o diretório raiz para os arquivos de entrada
  },
  "include": [
    "src",             // Mantém a compilação do front
    "server/**/*.ts"   // Compila os arquivos TypeScript do back-end
  ]
}
